@model GETO_.Models.ApiKeyModel

<div class="container">
    @if(ViewBag.Success == true) { 
        <div class="alert alert-success">Data Updated Successfully</div>
    }
    <div class="col-12">
        <form method="post" action="/Admin/EditApiKey">
            @Html.HiddenFor(x => x.Id)
            <div class="row">
                <div class="col-1"></div>
                <div class="col-4"><h4>User</h4></div>
                <div class="col-6">@Html.TextBoxFor(x=>x.User,new {@readonly="read only",@class="btn-block"})</div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-4"><h4>API Key</h4></div>
                <div class="col-6">@Html.TextBoxFor(x => x.Key, new { disabled="disabled", @readonly = "read only", @class = "btn-block"  })</div>
                <div class="col-1"></div>
            </div>
            <div class="row mt-2">
                <div class="col-1"></div>
                <div class="col-4">Get Oxyzen Donor Data Permission</div>
                <div class="col-6">@Html.CheckBoxFor(x => x.GetO2Data)</div>
                <div class="col-1"></div>
            </div>
            <div class="row mt-2">
                <div class="col-1"></div>
                <div class="col-4">Get Plasma Donor Data Permission</div>
                <div class="col-6">@Html.CheckBoxFor(x => x.GetPlasmaData)</div>
                <div class="col-1"></div>
            </div>
            <div class="row mt-2">
                <div class="col-1"></div>
                <div class="col-4">Add Oxyzen Donor Permission</div>
                <div class="col-6">@Html.CheckBoxFor(x => x.O2Add)</div>
                <div class="col-1"></div>
            </div>
            <div class="row mt-2">
                <div class="col-1"></div>
                <div class="col-4">Add Plasma Donor Permission</div>
                <div class="col-6">@Html.CheckBoxFor(x => x.AddPlasmaData)</div>
                <div class="col-1"></div>
            </div>
           <div class="row mt-2">
               <div class="col-1"></div>
               <div class="col-2"><button type="submit" class="btn btn-primary">Save</button></div>
           </div>
        </form>
    </div>
</div>